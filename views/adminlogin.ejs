<%- include('./partials/header') %>


<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-300 px-4">
    <div class="w-full max-w-md bg-white/80 backdrop-blur-lg shadow-xl rounded-3xl p-10">
        <h2 class="text-3xl font-bold text-gray-800 mb-4 text-center">Admin Login</h2>
        <p class="text-sm text-gray-600 mb-6 text-center">Authorized personnel only</p>
        <form action="owners/login" method="POST" class="space-y-4">
            <input required type="email" name="email" placeholder="Admin Email" class="w-full px-4 py-3 rounded-xl bg-white border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-400" />
            <input required type="password" name="password" placeholder="Password" class="w-full px-4 py-3 rounded-xl bg-white border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-400" />
            <button type="submit" class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-3 rounded-xl">Login</button>
        </form>
        <div class="mt-6 text-center">
            <a href="/" class="text-sm text-gray-600 hover:text-red-500 transition">Back to User Login</a>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
