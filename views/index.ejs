<%- include('./partials/header') %>

<% if (error && error.length > 0) { %>
    <% error.forEach(function(msg) { %>
        <div class="fixed top-6 left-1/2 transform -translate-x-1/2 z-50 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg">
            <%= msg %>
        </div>
    <% }); %>
<% } %>

<div class="min-h-screen w-full bg-gradient-to-br from-indigo-100 via-purple-100 to-pink-100 flex items-center justify-center px-4">
    <div class="w-full max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-10 bg-white/70 backdrop-blur-lg shadow-2xl rounded-3xl p-10">
        
        <!-- Register -->
        <div>
            <h2 class="text-3xl font-bold text-gray-800 mb-2">Join <span class="text-indigo-500">Snatch</span></h2>
            <p class="text-gray-600 mb-4 text-sm">Create a new account</p>
            <form action="/users/register" method="POST" class="space-y-4">
                <input required type="text" name="fullname" placeholder="Full Name" class="w-full px-4 py-3 rounded-xl bg-white border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-400" />
                <input required type="email" name="email" placeholder="Email" class="w-full px-4 py-3 rounded-xl bg-white border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-400" />
                <input required type="password" name="password" placeholder="Password" class="w-full px-4 py-3 rounded-xl bg-white border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-400" />
                <button type="submit" class="w-full bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-3 rounded-xl">Sign Up</button>
            </form>
        </div>

        <!-- Login -->
        <div>
            <h2 class="text-3xl font-bold text-gray-800 mb-2">Welcome Back</h2>
            <p class="text-gray-600 mb-4 text-sm">Login to your account</p>
            <form action="/users/login" method="POST" class="space-y-4">
                <input required type="email" name="email" placeholder="Email" class="w-full px-4 py-3 rounded-xl bg-white border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-400" />
                <input required type="password" name="password" placeholder="Password" class="w-full px-4 py-3 rounded-xl bg-white border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-400" />
                <button type="submit" class="w-full bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-3 rounded-xl">Login</button>
            </form>
            <div class="mt-6 text-center">
                <a href="/owners/admin/login" class="text-sm text-gray-600 hover:text-indigo-500 transition">Are you an admin? Login here</a>
            </div>
        </div>

    </div>
</div>

<%- include('./partials/footer') %>
