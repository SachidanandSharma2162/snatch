<%- include('./partials/header') %>

<div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded-xl shadow-lg">
  <h2 class="text-3xl font-bold mb-6 text-center text-blue-600">Update Your Profile</h2>

  <form 
    action="/editprofile" 
    method="POST" 
    enctype="multipart/form-data" 
    class="space-y-8"
    autocomplete="off"
  >

    <!-- Contact Section -->
    <div>
      <h3 class="text-xl font-semibold text-gray-800 mb-4 border-b pb-2">ğŸ‘¤ Personal Info</h3>

      <label class="block text-gray-700 font-medium mb-2">ğŸ“ Contact Number</label>
      <input 
        type="text" 
        name="contact" 
        value="<%= user.contact || '' %>"
        placeholder="Enter your 10-digit mobile number"
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
      />
    </div>

    <!-- Profile Picture -->
    <div>
      <label class="block text-gray-700 font-medium mb-2">ğŸ–¼ï¸ Profile Image</label>
      <input 
        type="file" 
        name="image"
        class="block w-full text-sm text-gray-500"
      />
      <% if (user.picture && user.picture.data) { %>
        <div class="mt-4">
          <img 
            src="data:<%= user.picture.contentType %>;base64,<%= user.picture.data.toString('base64') %>" 
            alt="Current Profile Picture" 
            class="h-24 w-24 rounded-full object-cover border"
          />
        </div>
      <% } %>
    </div>

    <!-- Address Section -->
    <div>
      <h3 class="text-xl font-semibold text-gray-800 mb-4 border-b pb-2">ğŸ“¦ Delivery Address</h3>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-gray-700 mb-1">ğŸ  House Number</label>
          <input 
            type="number" 
            name="housenumber" 
            placeholder="e.g. 221B"
            value="<%= user.address?.housenumber || '' %>"
            class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
          />
        </div>

        <div>
          <label class="block text-gray-700 mb-1">ğŸ›£ï¸ Area / Street</label>
          <input 
            type="text" 
            name="area" 
            placeholder="e.g. Baker Street"
            value="<%= user.address?.area || '' %>"
            class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
          />
        </div>

        <div>
          <label class="block text-gray-700 mb-1">ğŸ“ Nearby Landmark</label>
          <input 
            type="text" 
            name="nearyby" 
            placeholder="e.g. Near City Mall"
            value="<%= user.address?.nearyby || '' %>"
            class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
          />
        </div>

        <div>
          <label class="block text-gray-700 mb-1">ğŸ™ï¸ State</label>
          <input 
            type="text" 
            name="state" 
            placeholder="e.g. Maharashtra"
            value="<%= user.address?.state || '' %>"
            class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
          />
        </div>

        <div>
          <label class="block text-gray-700 mb-1">ğŸŒ Country</label>
          <input 
            type="text" 
            name="country" 
            placeholder="e.g. India"
            value="<%= user.address?.country || '' %>"
            class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
          />
        </div>

        <div>
          <label class="block text-gray-700 mb-1">ğŸ“® Pincode</label>
          <input 
            type="number" 
            name="pincode" 
            placeholder="e.g. 400001"
            value="<%= user.address?.pincode || '' %>"
            class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
          />
        </div>
      </div>
    </div>

    <!-- Submit Button -->
    <button 
      type="submit" 
      class="w-full bg-gradient-to-r from-blue-500 to-blue-700 text-white py-3 rounded-md text-lg hover:from-blue-600 hover:to-blue-800 transition"
    >
      ğŸ’¾ Save Changes
    </button>
  </form>
</div>

<%- include('./partials/footer') %>
